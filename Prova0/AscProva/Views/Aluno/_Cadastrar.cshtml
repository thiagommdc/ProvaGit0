@model IEnumerable<AscProva.Modelo.Alunos>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Digite o nome do aluno</h5>
            <button type="button" class="close" data-dismiss="modal" style="outline: 0;">
                <span>&times;</span>
            </button>
        </div>
        <div class="modal-body">

            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nome" } })
            @Html.EditorFor(model => model.Turma, new { htmlAttributes = new { Style = "display:none" } })

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">
                Incluir <i class="fas fa-angle-right ml-2" style="color: white;"></i>
            </button>
        </div>
    </div>

}
