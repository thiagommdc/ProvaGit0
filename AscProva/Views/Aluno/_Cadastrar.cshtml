@model AscProva.Modelo.Alunos

<div id="DivCadastrar">

    <div class="modal-header">
        <h5 class="modal-title">Digite o nome do aluno</h5>
        <button type="button" class="close" data-dismiss="modal" style="outline: 0;" id="BotaoFechaCadastro">
            <span>&times;</span>
        </button>
    </div>
    <div class="modal-body">

        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nome" } })

        <input type="hidden" name="Turma" id="Turma" value="">

    </div>

</div>


<script>
    @ViewBag.Javascipt

    function FechaCadastro() {
        document.getElementById('Nome').value = "";
        document.getElementById('BotaoFechaCadastro').click();        
    }

</script>

